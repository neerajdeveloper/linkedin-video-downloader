{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "FLASK_DEBUG": "false",
    "PYTHONUNBUFFERED": "1"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "ignore": [
    "app.py",
    "app_local.py",
    "app_backup.py",
    "app_optimized.py",
    "downloads/",
    "venv/",
    "*.mp4",
    "*.webm"
  ]
}

